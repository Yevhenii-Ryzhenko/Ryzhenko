pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/Yevhenii-Ryzhenko/Ryzhenko.git'
            }
        }
        stage('Install dependencies') {
            steps {
                bat '''
                    rmdir /s /q venv
                    "C:\Users\yryzh\AppData\Local\Programs\Python\Python313\python.exe" -m venv venv
                '''
            }
        }
        stage('Install requiements') {
            steps {
                bat '''
                    venv\\Scripts\\activate
                    "C:\Users\yryzh\AppData\Local\Programs\Python\Python313\python.exe" -m pip install -r requirements.txt
                '''
            }
        }
        stage('Run tests') {
            steps {
                bat '''
                    venv\\Scripts\\activate
                    pytest -m authorization --alluredir=allure-results
                '''
            }
        }
    }
    post {
        always {
            allure includeProperties: false, jdk: '', results: [[path: 'allure-results']]
        }
    }
}